{
  "name": "kindle-hub",
  "version": "0.1.0",
  "type": "module",
  "description": "Interactive web app for kindle-tools-ts - Import, edit, and export Kindle highlights",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check": "pnpm lint && pnpm typecheck && pnpm test:run",
    "clean": "rimraf dist",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,vue,js}": "eslint --fix"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@vueuse/core": "^14.1.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.2.1",
    "dompurify": "^3.3.1",
    "fuse.js": "^7.1.0",
    "kindle-tools-ts": "file:kindle-tools-ts-0.5.0.tgz",
    "lucide-vue-next": "^0.562.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.27",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.0.9",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.0.0",
    "happy-dom": "^20.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "unplugin-auto-import": "^21.0.0",
    "unplugin-vue-components": "^31.0.0",
    "unplugin-vue-router": "^0.19.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.7.0",
  "author": "Andrés M. Jiménez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KindleTools/KindleHub.git"
  },
  "homepage": "https://github.com/KindleTools/KindleHub#readme",
  "bugs": {
    "url": "https://github.com/KindleTools/KindleHub/issues"
  }
}